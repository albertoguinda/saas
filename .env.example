# Cadena de conexión para MongoDB Atlas
MONGODB_URI=your_mongodb_uri

# Clave secreta para NextAuth
NEXTAUTH_SECRET=your_secret

# URL base de tu app
NEXTAUTH_URL=http://localhost:3000

# Clave secreta de Stripe para procesar pagos
STRIPE_SECRET_KEY=
# IDs de producto y precio Premium
STRIPE_PREMIUM_PRODUCT_ID=
STRIPE_PREMIUM_PRICE_ID=

# Credenciales Upstash Redis para rate limit
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Email del administrador para acceder a rutas internas
ADMIN_EMAIL=admin@example.com

# Configuración Cloudinary (opcional)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Configuración AWS S3 (opcional)
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Ruta local para almacenar imágenes en desarrollo
LOCAL_ASSETS_DIR=public/uploads

# Contraseña por defecto para el usuario seed
# SEED_USER_PASSWORD=your_seed_password
# Más adelante podrías necesitar:
STRIPE_WEBHOOK_SECRET=
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# EMAIL_SERVER_HOST=
# EMAIL_SERVER_USER=
# EMAIL_SERVER_PASSWORD=
# EMAIL_FROM=
